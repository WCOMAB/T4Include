<Window x:Class="Test_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:wpf="clr-namespace:FileInclude.Source.WPF"
        Title="MainWindow" MinHeight="400" MinWidth="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Button.Click="Button_Click">
            <Button Margin="0,0,8,0" Padding="16,4,16,4" Content="First"/>
            <Button Margin="0,0,8,0" Padding="16,4,16,4" Content="Second"/>
            <Button Margin="0,0,8,0" Padding="16,4,16,4" Content="Third"/>
        </StackPanel>
        <wpf:AnimatedEntrance Grid.Row="2">
            <Border Background="Yellow">
                <TextBlock Text="First"/>
            </Border>
            <Border Background="Red">
                <TextBlock Text="Second"/>
            </Border>
            <Border Background="Blue">
                <TextBlock Text="Third"/>
            </Border>
        </wpf:AnimatedEntrance>
    </Grid>
</Window>
